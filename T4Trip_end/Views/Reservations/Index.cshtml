@model IEnumerable<T4Trip_end.Models.Reservation>

@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm("Index", "Reservations", FormMethod.Get))
{

    @Html.TextBox("StartDateSearch", null, new { @class = "form-control", @placeholder = "Search With Location Name" })
    @Html.TextBox("EndDateSearch", null, new { @class = "form-control", @placeholder = "Search With Address" })

    <input type="submit" value="T4Trip Search" />
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HouseRes.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.renter)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Occupants)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBooking)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustommerComments)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PricePerNightCharged)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HouseRes.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.renter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Occupants)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBooking)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustommerComments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerNightCharged)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
